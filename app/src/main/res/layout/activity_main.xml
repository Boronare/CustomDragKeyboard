<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="org.dyndns.fules.ck.MainActivity">

    <Button
        android:id="@+id/button17"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:onClick="btn1_click"
        android:text="@string/activate_keyboard"
        app:layout_constraintBottom_toTopOf="@+id/button18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button18"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:onClick="btn2_click"
        android:text="@string/set_current_keyboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button19"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:onClick="btn3_click"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button18" />

</android.support.constraint.ConstraintLayout>